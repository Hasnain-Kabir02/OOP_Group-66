<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_final.AssignDeliveryController">
    <VBox prefHeight="700.0" prefWidth="1000.0" spacing="20.0" style="-fx-padding: 20;">
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #336699; -fx-padding: 10 20;">
            <Label text="ðŸšš Assign Deliveries" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </HBox>

        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <VBox HBox.hgrow="ALWAYS" spacing="10.0" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
                <Label text="Unassigned Parcels" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                <TableView fx:id="unassignedParcelsTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="parcelIdCol" prefWidth="100.0" text="Parcel ID" />
                        <TableColumn fx:id="recipientNameCol" prefWidth="200.0" text="Recipient" />
                        <TableColumn fx:id="destinationCol" prefWidth="250.0" text="Destination" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <VBox alignment="TOP_CENTER" prefWidth="300.0" spacing="20.0" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
                <Label text="Assign to Staff" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                <Label text="Select a Staff Member:" />
                <ComboBox fx:id="staffComboBox" prefWidth="250.0" promptText="Select a staff member" />
                <Label text="Selected Parcel(s):" />
                <ListView fx:id="selectedParcelsListView" VBox.vgrow="ALWAYS" />
                <Button onAction="#handleAssignSelected" prefWidth="250.0" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" text="Assign Selected Parcels" />
                <Button onAction="#handleReturnToDashboard" prefWidth="250.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold;" text="Return to Dashboard" />
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
