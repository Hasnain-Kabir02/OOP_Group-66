<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_final.ViewAllParcelsController">
    <VBox prefHeight="700.0" prefWidth="1000.0">
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #336699; -fx-padding: 10 20;">
            <Label text="ðŸ“¦ All Parcels" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </HBox>

        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <TextField fx:id="searchTextField" HBox.hgrow="ALWAYS" prefHeight="35.0" promptText="Search parcels by ID, sender, or recipient" />
                <Button onAction="#handleRefresh" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold;" text="Refresh" />
                <Button onAction="#handleReturnToDashboard" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" text="Return to Dashboard" />
            </HBox>

            <TableView fx:id="parcelsTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="parcelIdCol" prefWidth="100.0" text="Parcel ID" />
                    <TableColumn fx:id="senderNameCol" prefWidth="150.0" text="Sender Name" />
                    <TableColumn fx:id="recipientNameCol" prefWidth="150.0" text="Recipient Name" />
                    <TableColumn fx:id="statusCol" prefWidth="120.0" text="Status" />
                    <TableColumn fx:id="locationCol" prefWidth="150.0" text="Current Location" />
                    <TableColumn fx:id="lastUpdateCol" prefWidth="150.0" text="Last Updated" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </VBox>
</AnchorPane>
