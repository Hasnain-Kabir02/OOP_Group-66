<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f4f4f4;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.oop_project_final.BranchManagerDashboardController">

    <VBox prefHeight="700.0" prefWidth="1000.0">

        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #336699; -fx-padding: 10 20;">
            <Label text="Branch Manager Dashboard" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            <Pane HBox.hgrow="ALWAYS" />
            <Button onAction="#handleLogout" style="-fx-background-color: white; -fx-text-fill: #336699; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 5;" text="Logout" />
        </HBox>

        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <VBox prefWidth="320.0" spacing="20.0">
                <VBox style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
                    <Label text="📦 Parcel Summary" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
                    <Separator style="-fx-background-color: lightgray; -fx-padding: 10;" />
                    <GridPane hgap="10.0" vgap="10.0">
                        <Label text="Total Parcels Today:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="totalParcelsLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="In Transit:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="inTransitLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Delivered Today:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="deliveredLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Pending Pickup:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Label fx:id="pendingPickupLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </GridPane>
                </VBox>

                <VBox style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
                    <Label text="⚙️ Quick Actions" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
                    <Separator style="-fx-background-color: lightgray; -fx-padding: 10;" />
                    <VBox spacing="10.0">
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleViewParcels" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" text="View All Parcels" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleAssignDelivery" style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-font-weight: bold;" text="Assign Delivery" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleManageStaff" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold;" text="Manage Staff" />
                    </VBox>
                </VBox>
            </VBox>

            <VBox HBox.hgrow="ALWAYS" spacing="20.0">
                <VBox prefHeight="350.0" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
                    <Label text="👥 Staff Members" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
                    <Separator style="-fx-background-color: lightgray; -fx-padding: 10;" />
                    <TableView fx:id="staffTableView" prefHeight="300.0" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="staffIdCol" prefWidth="75.0" text="ID" />
                            <TableColumn fx:id="staffNameCol" prefWidth="200.0" text="Name" />
                            <TableColumn fx:id="staffRoleCol" prefWidth="150.0" text="Role" />
                            <TableColumn fx:id="staffStatusCol" prefWidth="150.0" text="Status" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>

                <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
                    <Label text="📅 Recent Activity Log" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
                    <Separator style="-fx-background-color: lightgray; -fx-padding: 10;" />
                    <ListView fx:id="activityLogListView" VBox.vgrow="ALWAYS" />
                </VBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>